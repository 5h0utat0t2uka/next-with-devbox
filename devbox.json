{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "path:./nix/node#node",
    "pnpm@10",
    "npm-check-updates@latest",
    "osv-scanner@latest"
  ],
  "env": {
    "DEVBOX_NO_PROMPT": "true"
  },
  "shell": {
    "init_hook": [],
    "scripts": {
      "install": "pnpm install --frozen-lockfile",
      "dev": "pnpm dev",
      "build": "pnpm build",
      "lint": "pnpm lint",
      "scan": "pnpm scan",
      "format": "pnpm format"
    }
  }
}
