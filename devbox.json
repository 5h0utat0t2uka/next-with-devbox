{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "nodejs_24@latest",
    "pnpm@latest",
    "npm-check-updates@latest",
    "ni"
  ],
  "env": {
    "DEVBOX_NO_PROMPT": "true"
  },
  "shell": {
    "init_hook": [],
    "scripts": {
      "install": "pnpm install",
      "dev": "pnpm dev",
      "update": "ncu -u && pnpm install",
      "build": "pnpm build",
      "start": "pnpm start"
    }
  }
}
